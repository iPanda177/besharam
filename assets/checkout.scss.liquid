}

.checkout-flex-header .flex-item.logo {
  max-width: 156px;
  padding: 16.5px 0;
}

.header__contact > .icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.header__contact .icon-contact {
  width: 2rem;
  height: 2rem;
  left: 1.5rem;
}

.header__contact .icon.icon-caret {
  right: 1.8rem;
  width: 1rem;
  height: 0.6rem;
}

.header__contact {
  position: relative;
  padding: 10px 60px;
  background-color: transparent;
  border: 1px solid #444649;
  border-radius: 37.5px;
  font-weight: 700;
  font-size: 16px;
  color:#fff;
  cursor: pointer;
}

.header__contact:hover {
  background-color: #000;
}

.select__contact {
  padding-top: 0;
  position: absolute;
  width: 100%;
  top: 44px;
  left: 0;
  z-index: 2;
}

.select__contact--inner {
  visibility: hidden;
  background-color: #000;
  border: 1px solid #444649;
  box-shadow: 0px 2rem 2rem rgba(0, 0, 0, .25);
  border-radius: 10px;
  padding: 0;
  margin: 0;
  transition: padding-top .5s ease;
}

.header__contact:hover .select__contact--inner {
  height: auto;
  visibility: visible;
  padding: 0.7rem;
  transition: padding-top .5s ease;
}

.select__contact a {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 14px;
  padding: 0.25rem 0;
  text-decoration: none;
}

.select__contact a:not(:first-of-type) {
  border-top: 1px solid #27282E;
}

.select__contact .icon {
  width: 2rem;
  height: 2rem;
  margin-right: 0.8rem;
}


// Main, Sidebar, Content Box
.main,
.sidebar,
.content-box {
  th {
    color: $colorWhiteTrans8;
  }

  .field__label {
    color: $colorWhiteTrans8;
  }

  .field--active .field__label {
    color: $colorWhiteTrans8;
  }

  .field__input {
    color: #fff;
    background: $colorBlackTrans3 !important;
    border: 0;

    &::-webkit-input-placeholder,
    &:-moz-placeholder,
