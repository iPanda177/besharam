    }
  }
}

.field__input {
  border-color: transparent;
  box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15);
}

#checkout .section {
  background: rgba(255,255,255,.05);
  border-radius: 10px;
  padding: 24px 12px 12px;
  margin-bottom: 24px;
}
@media (min-width: 990px) {
  #checkout .section {
    padding: 24px 24px 12px;
  }
}

.section--contact-information .field__input {
  color: $colorWhiteTrans6 !important;
}

.main .field__input {
  border-color: transparent;
}

.main .field__input:focus {
  border-color: $colorMagenta;
}

.content-box {
  color: #fff;

