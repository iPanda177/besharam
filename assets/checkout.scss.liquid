.checkout-header {
  margin: 0 auto;
  width: 100%;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
}

.checkout-flex-header {
  max-width: 1440px;
  margin: 0 auto;
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@media screen and (max-width: 990px) {
  .checkout-flex-header {
    width: 90%;
