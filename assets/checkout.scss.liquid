    color: $colorMediumGray;
  }
}

// Floating Labels
.floating-labels {
  .main .field__label {
    color: $colorLightGray;
    font-size: 10px;
  }

  .sidebar .field__label,
  .content-box .field__label {
    color: $colorLightGray;
  }

  .field--show-floating-label .field__input {
    font-size: 14px;
    color: #fff;

    &::-webkit-input-placeholder,
    &:-moz-placeholder,
    &::-moz-placeholder,
    &:-ms-input-placeholder {
      color: transparent;
    }
  }
}

// Checkbox & Radio Button Styles
#checkout {

  .step__sections {

    .content-box .content-box__row.content-box__row--tight-spacing-vertical,
    .content-box .content-box__row.content-box__row--secondary {
      padding: 0;
    }
  }

  .section--shipping-address {

    .content-box .content-box__row.content-box__row--tight-spacing-vertical,
    .content-box .content-box__row.content-box__row--secondary {
      padding: 0;
    }

    .content-box__header {
      background: hsla(0, 0%, 0%, 0.6);
      margin: 0 0 10px;
      padding: 20px 12.5px;

      h3 {
        margin: 0;
        color: hsla(0, 0%, 100%, 0.8);
      }
    }

  }

  .section--payment-method .content-box {
    background: transparent;

    .content-box__row {
      &:first-child {
        border-radius: 0;
      }

      &.radio-wrapper {
        border: none;
        margin-top: 1px;
        padding: 1em 0.5em;

        &.field--active {
          background: rgba(0, 0, 0, 0.4) !important;

          .payTitle {
            color: $colorWhite;
          }
        }
      }
    }

    .content-box__row--secondary {
      padding: ($gutter * 2) 0 0;
      border: none;
    }
  }

  .section--payment-method .content-box {
    .radio-wrapper {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      border-radius: 10px 10px 0px 0px;
    }

    .radio__label {
      float: none;
      display: flex;
      align-items: center;

      .radio__label__primary {
        flex: 1;
        display: flex !important;
        align-items: center;
        flex-wrap: wrap;
      }
    }

    .radio__label>div {
      margin-top: 5px;
    }
  }

  .radio__label,
  .checkbox__label {
    float: right;
    width: calc(100% - 25.5px);

    .radio-wrapper,
    .checkbox-wrapper {
      float: left;
      width: calc(100% - 43px);
    }
  }

  .radio__input,
  .checkbox__input {
    float: left;
    padding-right: $gutter;
    overflow: hidden;
    width: 18px;
  }

  .radio__accessory {
    display: inline;
    float: right;
  }

  label[for="checkout_activate_customer_account"] {
    font-size: 12px;
  }

  label[for="checkout_buyer_accepts_marketing"] {
    font-size: 14px;
  }
}

